<% content_for :html_head do %>
  <% javascript_tag do %>
  jQuery(function($) {
    $('select.dhtml_selector').selectbox({width: '96px', dhtml_selector: 'html_block_content'});
  })
  <% end %>
<% end %>
<div class="fields text_editor_fields">
  <% if cms_options[:label] %>
    <%= f.label method, cms_options[:label] %>
  <% else %>
    <%= f.label method %>
  <% end %>
  <%= drop_down_tag :dhtml_selector, options_for_select([["Rich Text", ""],["Simple Text", "disabled"]]), :onchange => "toggleEditor('#{id}', this)" %>
  <div class="editor">
    <%= f.text_editor method, options %>
  </div>
</div>
