<% @page_title = "Content Library / Add New #{@model.display_name}" %>
<h1>New <%= @block.display_name %></h1>
<% form_for(@block, :url => cms_path(@block, :create)) do |f| %>
  <%= f.error_messages %>
  <%= render :partial => 'hidden_fields', :locals => {:f => f} %>
  <%= render :partial => "cms/#{@block.content_block_type.pluralize}/form", :locals => {:f => f} %>
  <div class="fields">
    <%= f.submit "Save" %>
  </div>
<% end %>