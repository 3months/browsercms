<% @page_title = "Content Library / Add New #{@content_type.display_name}" %>
<h2>New <%= @block.display_name %></h2>
<% form_for(@block, :url => cms_path(@block, :create), :html => {:multipart => true}) do |f| %>
  <%= f.error_messages %>
  <%= render :partial => 'cms/blocks/hidden_fields', :locals => {:f => f} %>
  <%= render :partial => "cms/#{@block.content_block_type.pluralize}/form", :locals => {:f => f} %>
  <div class="fields">
    <%= f.submit "Save" %>
    <% if current_user.able_to?(:publish_content) && !@block.connect_to_page_id %>
      <button type="submit" name="<%= @block.content_block_type%>[publish_on_save]" value="true">Save And Publish</button>    
    <% end %>
  </div>
<% end %>