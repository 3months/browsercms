<% @page_title = "Administration / Email Messages" %>
<% @toolbar_title = "Email Messages" %>

<div class="roundedcorners">
  <table  class="data" width="100%">
    <thead>
      <tr>
        <th class="first"></th>
        <th><div class="dividers">To</div></th>
        <th><div class="dividers">Subject</div></th>
        <th class="last" colspan="2">Delivered</th>
    </tr>
  </thead>
  <tbody>
    <% @messages.each do |message|%>
      <tr>
        <td class="first"></td>
        <td><div class="dividers"><%= link_to h(truncate(message.recipients)), cms_path(message) %></div></td>
	      <td><div class="dividers"><%= link_to h(truncate(message.subject)), cms_path(message) %></div></td>
        <td class="last" style="white-space: nowrap"><%=h time_on_date(message.delivered_at) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="tl"></div>
<div class="tr"></div>
<div class="bl"></div>
<div class="br"></div>
</div>
