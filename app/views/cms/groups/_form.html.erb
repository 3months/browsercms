<%= f.error_messages %>

<div class="fields">
  <%= f.label :name, "Group Name" %>
  <%= f.text_field :name %>
</div>

<div class='fields'>
	<%= f.label :group_type_id, "What kind of user does this group represent?" %>
	<%= f.select :group_type_id, GroupType.find(:all).map { |g| [g.name, g.id] } %>
</div>

<%= render :partial => 'permissions' unless (params[:action] == "index" or params[:action] == "create") %>
<%= render :partial => 'sections' unless (params[:action] == "index" or params[:action] == "create") %>

<div class="buttons">
  <%= f.submit "Save" %>
</div>