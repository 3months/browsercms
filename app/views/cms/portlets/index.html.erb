<% @page_title = "Portlets" %>

<p><%= link_to "#{action_icon(:add)} New Portlet", cms_path(:portlets, :new) %></p>

<table id="blocks">
  <tr>
    <th>Name</th>
    <th>Type</th>
    <th>Updated</th>
    <th>Uses</th>
    <th>View</th>
    <th>Edit</th>
    <th>Delete</th>
  </tr>
  <% @portlets.each do |portlet| %>
    <tr>
      <td><%= portlet.name %></td>
      <td><%= portlet.portlet_type.name %></td>
      <td><%= portlet.updated_at.strftime("%m/%d/%y") %></td>
      <td class="uses"><%= Connector.for_block(portlet).count %></td>
      <td class="view"><%= link_to action_icon(:view), cms_path(portlet) %></td>
      <td class="edit"><%= link_to action_icon(:edit), cms_path(portlet, :edit) %></td>
      <td class="delete"><%= link_to action_icon(:delete), cms_path(portlet, :destroy), :method => :delete, :confirm => "Are you sure you want to delete '#{portlet.name}'?" %></td>
    </tr>
  <% end %>
</table>