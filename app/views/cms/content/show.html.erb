<% #These are need if this template is render by a rescue_from 
  @page = page if (!@page && defined?(page))
  @exception = exception if (!@exception && defined?(exception))
%>
<% @page_title = @page.page_title %>
<% able_to?(:edit_content, :publish_content) do %>
  <% content_for :html_head do %>
    <%= stylesheet_link_tag 'cms/page' %>
  <% end %>
  <iframe src="<%= cms_path(:toolbar, :page_id => @page.id, :page_version => @page.version, :mode => @mode) %>" width="100%" height="159px" frameborder="0" marginwidth="0" marginheight="0" scrolling="no" name="cms_toolbar"></iframe>
<% end %>
<% @page.connectors.for_page_version(@page.version).each do |c| %>
  <% content_for(c.container.to_sym) do %>
    <%= render_connector c %>
  <% end %>
<% end %> 


