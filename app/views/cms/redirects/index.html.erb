<% @page_title = "View Redirects" %>
<p><%= link_to "#{action_icon(:add)} New Redirect", cms_path(:redirects, :new) %></p>

<table id="blocks">
  <tr>
    <th>From</th>
    <th>To</th>
    <th>Edit</th>
    <th>Delete</th>
  </tr>
  <% @redirects.each do |redirect| %>
    <tr>
      <td><%=h redirect.from_path %></td>
      <td><%=h redirect.to_path %></td>
      <td class="edit"><%= link_to action_icon(:edit), cms_path(redirect, :edit) %></td>     
      <td class="delete"><%= link_to action_icon(:delete), cms_path(redirect, :destroy), :method => :delete, :confirm => "Are you sure you want to delete the #{redirect.from_path} -> #{redirect.to_path} redirect?" %></td>
    </tr>
  <% end %>
</table>