<%= f.error_messages %>
<div class="fields">
  <%= f.label :name %>
  <%= f.text_field :name %>
</div>
<div class="fields">
  <%= f.label :path %>
  <%= f.text_field :path %>
</div>
<div class="fields">
  <%= f.label :nav_image %>
  <%= f.text_field :nav_image %>
</div>
<div class="fields">
  <%= f.label :nav_rollover_image %>
  <%= f.text_field :nav_rollover_image %>
</div>
<div class="fields">
  <%= f.label :current_nav_image %>
  <%= f.text_field :current_nav_image %>
</div>
<div class="fields">
  <label>
    <%= f.check_box :hide_from_menus %>
    Hide from menus?
  </label>
</div>

<fieldset>
  <legend>Which 'Public' groups can view pages in this section?</legend>
  <%= hidden_field_tag "section[group_ids][]", "" %>
  <% for group in Group.public.all(:order => "name") %><div class="fields">
    <label>
      <%= check_box_tag "section[group_ids][]", group.id,
        @section.groups.include?(group), :class => "public_group_ids", :id => "public_group_ids_#{group.id}" %>
      <%= group.name %>
    </label>
  </div><% end %>
  <%= link_to_check_all 'input.public_group_ids' %>
  <%= link_to_uncheck_all 'input.public_group_ids' %>
</fieldset>

<fieldset>
  <legend>Which 'CMS' groups can edit pages and content in this section?</legend>
  <%= hidden_field_tag "section[group_ids][]", "" %>
  <% for group in Group.cms.all(:order => "name") %><div class="fields">
    <label>
      <%= check_box_tag "section[group_ids][]", group.id,
        @section.groups.include?(group), :class => "cms_group_ids", :id => "cms_group_ids_#{group.id}" %>
      <%= group.name %>
    </label>
  </div><% end %>
  <%= link_to_check_all 'input.cms_group_ids' %>
  <%= link_to_uncheck_all 'input.cms_group_ids' %>
</fieldset>

<div class="buttons">
  <%= f.submit "Save" %>
</div>